{# src/IB/PlatformBundle/Resources/views/Advert/menu.html.twig #}

{# Ce template n'hérite de personne,
   tout comme le template inclus avec {{ include() }}. #}

<h4>Dernières annonces</h4>
<ul class="nav nav-pills nav-stacked">
  {% for advert in listAdverts %}
    <li>
      <a href="{{ path('ib_platform_view', {'id': advert.id}) }}">
        {{ advert.title }}
      </a>
    </li>
  {% endfor %}
</ul>

<h4>Les catégories</h4>
<ul class="nav nav-pills nav-stacked">
  {% for category in listCategories %}
    <li>
      <a href="{{ path('ib_platform_advertByCategories') }}">
        {{ category.name }}
      </a>
    </li>
  {% endfor %}
</ul>

<h4><a href="{{ path('ib_platform_lastApplicationAndAdvert') }}">Les dernières candidatures</a></h4>